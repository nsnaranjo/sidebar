{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"dashboard": {
			"projectType": "application",
			"schematics": {
				"@schematics/angular:component": {
					"style": "scss"
				}
			},
			"root": "projects/dashboard",
			"sourceRoot": "projects/dashboard/src",
			"prefix": "app",
			"architect": {
				"build": {
					"builder": "@angular-architects/native-federation:build",
					"options": {},
					"configurations": {
						"production": {
							"target": "dashboard:esbuild:production"
						},
						"development": {
							"target": "dashboard:esbuild:development",
              "dev": true,
              "fileReplacements": [
                {
                  "replace": "projects/dashboard/src/environments/environment.ts",
                  "with": "projects/dashboard/src/environments/environment.development.ts"
                }
              ]
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "@angular-architects/native-federation:build",
					"options": {
						"target": "dashboard:serve-original:development",
						"rebuildDelay": 0,
						"dev": true,
						"port": 4203
					}
				},
				"extract-i18n": {
					"builder": "@angular-devkit/build-angular:extract-i18n",
					"options": {
						"buildTarget": "dashboard:build"
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"polyfills": [
							"zone.js",
							"zone.js/testing"
						],
						"tsConfig": "projects/dashboard/tsconfig.spec.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							"projects/dashboard/src/favicon.ico",
							"projects/dashboard/src/assets"
						],
						"styles": [
							"projects/dashboard/src/styles.scss"
						],
						"scripts": []
					}
				},
				"esbuild": {
					"builder": "@angular-devkit/build-angular:application",
					"options": {
						"outputPath": "dist/dashboard",
						"index": "projects/dashboard/src/index.html",
						"browser": "projects/dashboard/src/main.ts",
						"polyfills": [
							"zone.js",
							"es-module-shims"
						],
						"tsConfig": "projects/dashboard/tsconfig.app.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							"projects/dashboard/src/favicon.ico",
							"projects/dashboard/src/assets"
						],
						"styles": [
							"projects/dashboard/src/styles.scss"
						],
						"scripts": []
					},
					"configurations": {
						"production": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "500kb",
									"maximumError": "1mb"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "500kb",
									"maximumError": "1mb"
								}
							],
							"outputHashing": "all"
						},
						"development": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve-original": {
					"builder": "@angular-devkit/build-angular:dev-server",
					"configurations": {
						"production": {
							"buildTarget": "dashboard:esbuild:production"
						},
						"development": {
							"buildTarget": "dashboard:esbuild:development"
						}
					},
					"defaultConfiguration": "development",
					"options": {
						"port": 4203
					}
				}
			}
		}
	},
	"cli": {
		"analytics": false
	}
}
